{
  "name": "Easy Screenshot",
  "short_name": "iescreenshot",
  "description": "Easy Screenshot is an easy to use screen capture tool. Simply press one of the context menu items to capture entire or a portion of your screen.",
  "author": "Jeremy Schomery",
  "version": "0.1.0",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "background",
    "contextMenus",
    "<all_urls>"
  ],
  "web_accessible_resources": [],
  "background": {
    "page": "lib/chrome/background.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["data/content_script/inject.css"],
      "js": ["data/content_script/inject.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "homepage_url": "http://mybrowseraddon.com/screenshot.html",
  "icons": {
    "16": "data/icons/16.png",
    "48": "data/icons/48.png",
    "128": "data/icons/128.png"
  }
}
